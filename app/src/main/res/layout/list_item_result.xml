<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/base_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_resultImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@color/white"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="4dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_resultTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/plusjakartasans_semibold"
        android:text="Song name"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/iv_resultImage"
        app:layout_constraintStart_toStartOf="@+id/iv_resultImage"
        app:layout_constraintTop_toBottomOf="@+id/iv_resultImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_resultArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plusjakartasans_medium"
        android:text="Artist name"
        android:textColor="#969696"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tv_resultTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>